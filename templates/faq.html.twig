{% extends 'base_basic_header.twig' %}

{% block title %}
    FAQ | Webchain
{% endblock %}
{% block section %}
    FAQ
{% endblock %}

{% block content_injected %}

    <div class="faq container-fluid px-md-5 mx-auto mt-5">

        <p class="py-3">This Frequently Asked Questions section is made picking the most common questions submitted in our Bitcointalk thread, Telegram and Discord groups.</p>

        <div class="mt-0 mb-3 pl-1">

            {% for key,item in data %}
                {% set idx = loop.index %}
                {% set attr = 'v-b-toggle.q-' ~ idx %}

                <div class="card mb-2 list-item">
                    <p {{ attr }} class="question-title py-2 pl-3 m-0">{{ item.question }}</p>
                    <b-collapse id="q-{{ idx }}">
                        <b-card>{{ item.answer|raw }}</b-card>
                    </b-collapse>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}