{% extends 'base_basic_header.twig' %}

{% block title %}
    Admin Newsletter | Webchain
{% endblock %}
{% block section %}
    Admin Newsletter
{% endblock %}


{% block content_injected %}

    <div class="container mt-2 mb-4">

        <h2>Subscribed Emails</h2>

        <div class="card my-4 py-3">
            <div class="row p-1 text-center">
                <div class="col-5 pt-1">
                    We have <span><b>{{ newsletters|length }}</b></span> emails subscribed in our newsletter.
                </div>
                <div class="col-7">
                    <span>Export in CSV Format:</span>
                    <a href="#" class="btn btn-sm btn-primary">All</a>
                    <a href="#" class="btn btn-sm btn-primary">Enabled</a>
                    <a href="#" class="btn btn-sm btn-primary">Disabled</a>
                    <a href="#" class="btn btn-sm btn-primary">Selected Only</a>
                </div>
            </div>
        </div>


        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th scope="col" class="text-center">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col" class="text-center">Enabled</th>
                    <th scope="col" class="text-center">Joined</th>
                    <th scope="col" class="text-center">Select</th>
                </tr>
            </thead>
            <tbody>
                {% for newsletter in newsletters %}
                    <tr>
                        <th scope="row" class="text-center">{{ newsletter.id }}</th>
                        <td>{{ newsletter.email }}</td>
                        <td class="text-center">
                            {{ newsletter.enabled == 1
                                ? 'Yes | <a class="normal-link" href="#">Disable</a>'
                                : 'No | <a class="normal-link" href="#">Enable</a>' }}
                        </td>
                        <td class="text-center">{{ newsletter.created|date('Y-m-d H:i:s') }}</td>
                        <td class="text-center"><input type="checkbox" name="checked" value="{{ newsletter.id }}"></td>
                    </tr>
                {%  endfor %}

            </tbody>
        </table>

        <input type="search" placeholder="search for email">


    </div>

{% endblock %}