<div id="news" class="news post">
    <article class="container-fluid px-md-5 mx-auto mt-5">
        <div>
            <h1>
                {{ post.title }}
            </h1>

        </div>

        <div class="row mb-3 mt-4">
            <div class="col-12 image-header">
                {% media post.image, 'wide' %}
            </div>
            <div class="col-12 mt-3">
                {{ post.content|raw }}
            </div>
        </div>

        <div class="row mb-3">
            <div class="col d-flex align-items-center">
                <h3 class="d-block m-0">
                    {{ post.publicationDateStart | format_date('y/MM/dd h:mm aa') | replace({'AM': 'a.m.', 'PM': 'p.m.'}) }}
                </h3>
            </div>
            <div class="col">

            </div>
        </div>

        <div class="mb-3 mt-5 pt-5">
            <a href="{{ app.request.headers.get('referer') }}"><b>&lt;</b> BACK</a>
        </div>
    </article>
</div>